{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["**/*"],
    "exclude": [
        "node_modules",
        "controller",
        "error",
        "helpers",
        "middleware",
        "models",
        "routes",
        "service",
        "static"
    ]
}
